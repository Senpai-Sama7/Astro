{
  "dashboard": {
    "id": null,
    "uid": "astro-main",
    "title": "ASTRO System Monitoring",
    "tags": ["astro", "agents", "ai"],
    "timezone": "browser",
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Task Success Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(astro_tasks_total{status=\"success\"}[5m])) / sum(rate(astro_tasks_total[5m])) * 100",
            "legendFormat": "Success Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {"unit": "percent", "min": 0, "max": 100, "thresholds": {"steps": [
            {"color": "red", "value": 0},
            {"color": "yellow", "value": 80},
            {"color": "green", "value": 95}
          ]}}
        }
      },
      {
        "id": 2,
        "title": "Active Tasks",
        "type": "stat",
        "gridPos": {"h": 4, "w": 3, "x": 6, "y": 0},
        "targets": [{"expr": "astro_active_tasks", "legendFormat": "Active"}]
      },
      {
        "id": 3,
        "title": "Active Workflows",
        "type": "stat",
        "gridPos": {"h": 4, "w": 3, "x": 9, "y": 0},
        "targets": [{"expr": "astro_active_workflows", "legendFormat": "Active"}]
      },
      {
        "id": 4,
        "title": "System Uptime",
        "type": "stat",
        "gridPos": {"h": 4, "w": 3, "x": 6, "y": 4},
        "targets": [{"expr": "astro_uptime_seconds / 3600", "legendFormat": "Hours"}],
        "fieldConfig": {"defaults": {"unit": "h"}}
      },
      {
        "id": 5,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 3, "x": 9, "y": 4},
        "targets": [{"expr": "sum(rate(astro_errors_total[5m])) * 60", "legendFormat": "Errors/min"}],
        "fieldConfig": {"defaults": {"thresholds": {"steps": [
          {"color": "green", "value": 0},
          {"color": "yellow", "value": 1},
          {"color": "red", "value": 5}
        ]}}}
      },
      {
        "id": 6,
        "title": "Task Duration (P95)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {"expr": "histogram_quantile(0.95, sum(rate(astro_task_duration_seconds_bucket[5m])) by (le, agent_id))", "legendFormat": "{{agent_id}}"}
        ],
        "fieldConfig": {"defaults": {"unit": "s"}}
      },
      {
        "id": 7,
        "title": "Agent Health",
        "type": "table",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 8},
        "targets": [{"expr": "astro_agent_health", "format": "table", "instant": true}],
        "transformations": [{"id": "organize", "options": {"excludeByName": {"Time": true}}}]
      },
      {
        "id": 8,
        "title": "Tasks by Agent",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 9, "x": 6, "y": 8},
        "targets": [
          {"expr": "sum(rate(astro_tasks_total[5m])) by (agent_id)", "legendFormat": "{{agent_id}}"}
        ]
      },
      {
        "id": 9,
        "title": "Agent Reliability",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 9, "x": 15, "y": 8},
        "targets": [{"expr": "astro_agent_reliability * 100", "legendFormat": "{{agent_id}}"}],
        "fieldConfig": {"defaults": {"unit": "percent", "min": 0, "max": 100}}
      },
      {
        "id": 10,
        "title": "LLM Requests",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {"expr": "sum(rate(astro_llm_requests_total[5m])) by (model, status)", "legendFormat": "{{model}} - {{status}}"}
        ]
      },
      {
        "id": 11,
        "title": "LLM Token Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {"expr": "sum(rate(astro_llm_tokens_total[5m])) by (model, type)", "legendFormat": "{{model}} - {{type}}"}
        ]
      },
      {
        "id": 12,
        "title": "Database Query Duration (P95)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "targets": [
          {"expr": "histogram_quantile(0.95, sum(rate(astro_db_query_duration_seconds_bucket[5m])) by (le, operation))", "legendFormat": "{{operation}}"}
        ],
        "fieldConfig": {"defaults": {"unit": "s"}}
      },
      {
        "id": 13,
        "title": "Workflow Completion Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "targets": [
          {"expr": "sum(rate(astro_workflows_total[5m])) by (status)", "legendFormat": "{{status}}"}
        ]
      }
    ],
    "schemaVersion": 38,
    "version": 1
  }
}
