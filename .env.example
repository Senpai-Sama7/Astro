# Ultimate System v1 Configuration

# Node Environment
NODE_ENV=development
PROFILE=core

# Server Configuration
PORT=5000
API_PORT=5000
WEB_PORT=8080
HOST=localhost

# Database Configuration (Core Profile)
DB_TYPE=sqlite
DB_PATH=./data/ultimate-system.db

# Database Configuration (Cyber Profile)
DB_POSTGRES_HOST=localhost
DB_POSTGRES_PORT=5432
DB_POSTGRES_USER=ultimate_system
DB_POSTGRES_PASSWORD=changeme
DB_POSTGRES_DATABASE=ultimate_system

# Redis Configuration (Cyber Profile)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRY=7d

# Authentication
AUTH_SESSION_TIMEOUT=3600000
AUTH_MFA_ENABLED=false
AUTH_SAML_ENABLED=false

# Security
SECURITY_CORS_ORIGIN=http://localhost:3000
SECURITY_CSRF_ENABLED=true
SECURITY_RATE_LIMIT=100
SECURITY_RATE_LIMIT_WINDOW=15m

# Risk Evaluation
RISK_ENABLE_CVaR=true
RISK_TOOL_WEIGHT=0.40
RISK_TIME_WEIGHT=0.15
RISK_HISTORY_WEIGHT=0.20
RISK_CONTEXT_WEIGHT=0.25
RISK_APPROVAL_THRESHOLD=0.50

# Audit Logging
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=365
AUDIT_ARCHIVE_S3_BUCKET=
AUDIT_LOG_FORMAT=json

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Tool Execution
TOOL_TIMEOUT=30000
TOOL_MAX_OUTPUT_SIZE=104857600
TOOL_SANDBOX_ENABLED=true

# External APIs - LLM Providers
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
OLLAMA_URL=http://localhost:11434

# Monitoring
MONITORING_ENABLED=false
PROMETHEUS_PORT=9090

# Development
DEBUG=false
VERBOSE_LOGGING=false
