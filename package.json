{
  "name": "ultimate-system",
  "version": "1.0.0-alpha.0",
  "description": "Ultimate System v1: 3-layer AI orchestration (ASTRO + OTIS + C0Di3) with dual-profile deployment",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "NODE_ENV=development ts-node src/index.ts",
    "build": "tsc && npm run copy:assets",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:e2e": "jest --testPathPattern=e2e --runInBand",
    "test:security": "jest --testPathPattern=security --runInBand",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html",
    "lint": "eslint src/ --ext .ts --max-warnings=0",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "type-check": "tsc --noEmit",
    "pre-commit": "npm run lint && npm run format:check && npm run type-check",
    "docker:build:core": "docker build -f Dockerfile.core -t ultimate-system:latest-core -t ultimate-system:v1.0.0-core .",
    "docker:build:cyber": "docker build -f Dockerfile.cyber -t ultimate-system:latest-cyber -t ultimate-system:v1.0.0-cyber .",
    "docker:build:all": "npm run docker:build:core && npm run docker:build:cyber",
    "docker:test": "docker run --rm ultimate-system:latest-core npm test",
    "docker:run:core": "docker run --rm -it -p 8080:8080 -p 5000:5000 ultimate-system:latest-core",
    "perf:load": "autocannon --connections 10 --duration 10 http://localhost:5000/api/v1/health",
    "security:audit": "npm audit --audit-level=moderate",
    "security:snyk": "snyk test || true",
    "copy:assets": "cp -r src/assets dist/assets 2>/dev/null || true"
  },
  "keywords": [
    "ai",
    "orchestration",
    "security",
    "compliance",
    "rbac",
    "audit",
    "multi-agent",
    "cyber"
  ],
  "author": "Douglas Mitchell <senpai-sama7@proton.me>",
  "license": "MIT",
  "dependencies": {
    "argon2": "^0.31.2",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "events": "^3.3.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "socket.io": "^4.8.3",
    "sqlite3": "^5.1.6",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "autocannon": "^7.10.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.1.1",
    "snyk": "^1.1274.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
